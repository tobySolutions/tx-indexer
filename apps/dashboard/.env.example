# Solana RPC (server-side only - unrestricted key, never exposed to browser)
# Used by: lib/indexer.ts, app/actions/*.ts
SERVER_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_SERVER_KEY

# Solana RPC (client-side - domain-restricted key for wallet operations)
# Used by: components/providers.tsx, lib/wallet-transactions.ts
# Set "Allowed Domains" in Helius dashboard to your production domain
NEXT_PUBLIC_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_PUBLIC_KEY

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Upstash Redis (for nonce storage and rate limiting)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Jupiter API (for swaps) - Get your API key at https://portal.jup.ag
JUPITER_API_KEY=your-jupiter-api-key
